@using System.Globalization;
@model IEnumerable<VillaNumberDTO>
<br />
<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Lista de VilasNumber</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-action="CreateVillaNumber" class="btn btn-outline-primary"><i class="bi bi-plus-square-fill"></i> Criar nova VilaNumber</a>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Nome Villa
                </th>
                <th>
                    Número Villa
                </th>
                
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Villa.Name
                    </td>
                    <td>
                        @item.VillaNo
                    </td>
                    <td>
                        <a asp-action="UpdateVillaNumber" asp-route-id="@item.VillaNo" class="btn btn-success"><i class="bi bi-pencil-square"></i></a>
                        <a asp-action="DeleteVillaNumber" asp-route-id="@item.VillaNo" class="btn btn-danger"><i class="bi bi-trash-fill"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>