@using System.Globalization;
@model IEnumerable<VillaDTO>
<br />
<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Lista de Vilas</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-action="CreateVilla" class="btn btn-outline-primary"><i class="bi bi-plus-square-fill"></i> Criar nova vila</a>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Nome
                </th>
                <th>
                    Ocupação
                </th>
                <th>
                    Preço
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.Occupancy
                    </td>
                    <td>
                        R$ @item.Rate.ToString("F2", CultureInfo.InvariantCulture)
                    </td>
                    <td>
                        <a asp-action="UpdateVilla" asp-route-id ="@item.Id" class="btn btn-success"><i class="bi bi-pencil-square"></i></a>
                        <a asp-action="DeleteVilla" asp-route-id="@item.Id" class="btn btn-danger"><i class="bi bi-trash-fill"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>